<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item-->
    </style>
    
    <style name="AppTheme.NoTitle_FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@mipmap/img_splash1</item>
    </style>

    <!--  底栏控件风格  -->

    <style name="TabRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@drawable/tab_text_color_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



    <!--  主页头部控件风格  -->

    <style name="HomepageHeader" />

    <style name="HomepageHeader.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_subheading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomepageHeader.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_28</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bg_label</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
